<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="350.0" style="-fx-background-color: #18181C;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ibia.app.controllers.NewConference">
   <children>
      <Label text="Conference Details" textFill="WHITE">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Conference name" textFill="#bbbbbb">
               <font>
                  <Font name="Calibri" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <TextField fx:id="confName" style="-fx-border-color: #363648; -fx-border-width: 0 0 3 0; -fx-text-fill: WHITE; -fx-background-color: TRANSPARENT;">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Number of committees" textFill="#bbbbbb">
               <font>
                  <Font name="Calibri" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
      <TextField fx:id="confCommittees" style="-fx-border-color: #363648; -fx-background-color: TRANSPARENT; -fx-border-width: 0 0 3 0; -fx-text-fill: WHITE;">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Delegates per committee" textFill="#bbbbbb">
               <font>
                  <Font name="Calibri" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
      <TextField fx:id="delsPerCommittee" style="-fx-border-color: #363648; -fx-background-color: TRANSPARENT; -fx-border-width: 0 0 3 0; -fx-text-fill: WHITE;">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
      </TextField>
      <Pane prefHeight="30.0" prefWidth="300.0" />
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Label text="*These details can be edited later" textFill="#bbbbbb">
               <font>
                  <Font name="Calibri Italic" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="cancelNewConf" mnemonicParsing="false" onMouseClicked="#handleCancelNewConfAction" style="-fx-background-color: #363648;" text="Cancel" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="createNewConf" mnemonicParsing="false" onMouseClicked="#handleCreateNewConfAction" style="-fx-background-color: #363648;" text="Create" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" right="15.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
