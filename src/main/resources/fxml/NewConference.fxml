<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="135.0" minWidth="350.0" style="-fx-background-color: #2a2a38;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ibia.app.controllers.NewConference">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label text="Conference Name" textFill="#bbbbbb">
               <font>
                  <Font name="Calibri" size="22.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <TextField fx:id="confName" style="-fx-border-color: #18181c; -fx-border-width: 0 0 3 0; -fx-text-fill: WHITE; -fx-background-color: TRANSPARENT;">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="cancelNewConf" mnemonicParsing="false" onMouseClicked="#handleCancelNewConfAction" style="-fx-background-color: #18181c;" text="Cancel" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="createNewConf" mnemonicParsing="false" onMouseClicked="#handleCreateNewConfAction" style="-fx-background-color: #18181c;" text="Create" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
